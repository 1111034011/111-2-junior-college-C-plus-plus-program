#include <stdio.h>
void displaybits(unsigned int value, int dir, int num);
int main(void) 
{
	unsigned int x;
	printf("%s", "Enter a nonnegative int:");
	scanf_s("%u", &x);
	displaybits(x, 1, 1);
}
void displaybits(unsigned int value, int dir, int num) {
	unsigned int temp,display = 1 << 31;
	printf("%10u=", value);
	temp = value;
	for (unsigned int c = 1; c <= 32; ++c) {
		putchar(temp & display ? '1' : '0');
		temp <<= 1; 
		if (c % 8 == 0) {
			putchar('   ');
		}
	}
	if (dir == 0) 
		value = value << num;
	else
		value = value >> num;
	printf("\n");
	for (unsigned int c = 1; c <= 32; ++c) {
		putchar(value & display ? '1' : '0');
		if (c % 8 == 0) {
			putchar('   ');
		}
	}
	  
	putchar('\n');
}//抄我程式祝你期中期末全59分
